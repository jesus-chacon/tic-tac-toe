{
  "root": true,
  "extends": ["eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 110
      },
      {
        "usePrettierrc": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"]
    }
  ]
}
